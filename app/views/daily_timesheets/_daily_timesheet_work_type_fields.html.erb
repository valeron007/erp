<div class="nested-fields">
  <div class="clearfix">
    <%= link_to_remove_association t('Remove'), f %>
  </div>
  <h4 class="work-category"></h4>
  <%= f.input :work_type do %>
      <%= f.select :work_type_id, @work_types.map { |w| [w.to_s, w.id, {'data-price' => w.price_per_unit}] }, {include_blank: ''}, {class: 'form-control s-object'} %>
  <% end %>

  <%= f.input :amount, as: :string, :input_html => {class: 's-amount'} %>
</div>