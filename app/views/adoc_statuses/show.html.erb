<% content_for :title do %>
<%= t('View')%> <%= t('Adoc Status') %>
<% end %>

<% content_for :page_header do %>
<%= t('View')%> <%= t('Adoc Status') %>
<% end %>

<div class="fix-height">

  <div class="btn-actionbar">
    <%= link_to adoc_statuses_path, class: 'btn btn-app' do %>
    <i class='fa fa-chevron-left'></i>
    <span><%= t('Back to list') %></span>
    <%- end -%>
    <% if policy(@adoc_status).can_edit? %>
    <%= link_to edit_adoc_status_path(@adoc_status), class: 'btn btn-app' do %>
    <i class='fa fa-pencil-square-o'></i>
    <span><%= t('Edit') %></span>
    <%- end -%>
    <% end %>
    <% if policy(@adoc_status).can_delete? %>
    <%= link_to adoc_status_path(@adoc_status), method: 'delete', data: { confirm: t('Are you sure?') }, class: 'btn btn-app' do %>
    <i class='fa fa-trash-o'></i>
    <span><%= t('Delete') %></span>
    <%- end -%>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title"><%= t('Adoc Status') %> <%= t('Details') %></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <dl class="dl-horizontal">
          
              <dt><%= t('Name') %></dt>
              <dd><%= @adoc_status.name %></dd>
          
              <dt><%= t('Color') %></dt>
              <dd><%= @adoc_status.color %></dd>
          
              <dt><%= t('Order') %></dt>
              <dd><%= @adoc_status.order %></dd>
          
          </dl>
        </div>
        <!-- /.box-body -->
      </div>

    </div>
  </div>

</div>