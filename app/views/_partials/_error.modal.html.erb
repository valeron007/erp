<div class="modal fade" id="error_modal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
  <%= simple_form_for model, url: url, remote: true, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>

      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="penaltyModalLabel"><%= t('Add error') %></h4>
          </div>
          <div class="modal-body">
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :error_text %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success"><%= t('Submit') %></button>
            <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('Cancel') %></button>
          </div>
        </div>
      </div>
  <% end %>
</div>