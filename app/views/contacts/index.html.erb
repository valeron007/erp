<% content_for :title do %>
<%= t('Contact Management') %>
<% end %>

<% content_for :page_header do %>
<%= t('Contact Management') %>
<% end %>

<div class="fix-height">
  <div class="btn-actionbar">
    <% if policy(:contact).can_create? %>
      <%= link_to new_contact_path, class: 'btn btn-app' do %>
      <i class='fa fa-plus-square-o'></i>
      <span><%= t('Add new') %></span>
      <%- end -%>
    <% end %>
  </div>

  <table class="table table-bordered table-striped table-valign-middle">
    <thead>
    <tr>
      
          <th>Name</th>
      
          <th>Phone</th>
      
          <th>Position</th>
      
      <th class="centered actions"><%= t('Actions') %></th>
    </tr>
    </thead>
    <tbody>
    <% @contacts.each do |contact| %>
    <tr>
      
          <td><%= contact.name %></td>
      
          <td><%= contact.phone %></td>
      
          <td><%= contact.position %></td>
      
      <td class="centered">
        <% if policy(contact).can_view? %>
          <%= link_to contact_path(contact), class: 'btn btn-sm btn-default', title: t('View') do %>
          <i class='fa fa-lg fa-eye'></i>
          <%- end -%>
        <% end %>
        <% if policy(contact).can_edit? %>
          <%= link_to edit_contact_path(contact), class: 'btn btn-sm btn-default', title: t('Edit') do %>
          <i class='fa fa-lg fa-pencil-square-o'></i>
          <%- end -%>
        <% end %>
        <% if policy(contact).can_delete? %>
          <%= link_to contact_path(contact), method: :delete, data: { confirm: t('Are you sure?') }, class: 'btn btn-sm btn-danger', title: t('Delete') do %>
          <i class='fa fa-lg fa-trash-o'></i>
          <%- end -%>
        <% end %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>

</div>