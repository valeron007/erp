<div class="nested-fields">
  <div class="clearfix">
    <%= link_to_remove_association t('Remove'), f %>
  </div>
  <%= f.input :additional do %>
      <%= f.select :additional_id, Additional.all.map {|e| [e.to_s, e.id, {'data-price' => e.price_per_unit}]}, {include_blank: ''}, {class: 'form-control s-object'} %>
  <% end %>

  <%= f.input :amount, input_html: {min: 0, class: 's-amount'} %>

  <%= f.input :total_price, input_html: {min: 0, step: 0.01, class: 's-total'} %>
</div>