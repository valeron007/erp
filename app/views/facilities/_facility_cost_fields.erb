<div class="nested-fields">
  <div class="clearfix">
    <%= link_to_remove_association t('Remove'), f %>
  </div>

  <div class="form-group">
    <%= f.label :title, class: 'col-sm-3 control-label' %>
    <div class="col-sm-5">
      <%= f.input_field :title, class: 'form-control' %>
    </div>
    <%= f.label :amount, class: 'col-sm-1 control-label' %>
    <div class="col-sm-3">
      <%= f.input_field :amount, min: 0, step: 0.01, class: 'form-control' %>
    </div>
  </div>
</div>