<%= simple_form_for @material, html: { class: 'form-horizontal' }, wrapper: :horizontal_form, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, file: :horizontal_file_input, boolean: :horizontal_boolean } do |f| %>
    <div class="box box-primary">
      <div class="box-body">

        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="form-group <%= ("has-error" if @material.errors[:name].any?) %>">
            <%= f.label :name, {class: 'col-sm-3 control-label'} %>
            <div class="col-sm-9">
              <%= f.select :name, Material.options_for_select_name, {include_blank: ''}, {class: 'form-control select2-tags'} %>
              <%= f.error :name %>
            </div>
          </div>
          <div class="form-group <%= ("has-error" if @material.errors[:tags].any?) %>">
            <%= f.label :tags, {class: 'col-sm-3 control-label'} %>
            <div class="col-sm-9">
              <%= f.select :tags, Material.options_for_select_alias_name, {include_blank: '', selected: !@material.tags.blank? ? JSON.parse(@material.tags) : '',}, {multiple: true, class: 'form-control select2-tags'} %>
              <%= f.error :tags %>
            </div>
          </div>

          <%= f.association :unit %>

          <%= f.input :price_per_unit, input_html: {min: 0, step: 0.01, value: number_with_precision(f.object.price_per_unit, precision: 2)} %>

          <% if policy(@material).can_view_document_name? %>
              <fieldset>
                <legend>
                  <%= t('Document name') %>
                  <%= link_to_add_association '<i class="fa fa-plus"></i>'.html_safe, f, :d_names, {'data-association-insertion-node':'.d_name_fields', 'data-association-insertion-method': 'prepend'} %>
                </legend>
                <div class="d_name_fields">
                  <%= f.simple_fields_for :d_names do |o|  %>
                      <%= render 'd_name_fields', f: o %>
                  <% end %>
                </div>
                <% if @material.errors[:d_names].any? %>
                    <div class="form-group has-error">
                      <label class="col-sm-3 control-label"></label>
                      <div class="col-sm-9 col-xs-6">
                        <%= f.error :d_names %>
                      </div>
                    </div>
                <% end  %>
              </fieldset>
          <% end  %>

          <%= f.association :inventory_type %>


        </div>

      </div>

      <div class="box-footer">
        <div class="form-group">
          <div class='col-sm-offset-3 col-sm-9'>
            <%= button_tag(type: 'submit', class: "btn btn-lg btn-success") do %>
                <i class="fa fa-floppy-o fa-fw" aria-hidden="true"></i> <%= t('Submit') %>
            <% end %>
            <%= link_to t('Cancel'), materials_path, class: 'btn btn-lg btn-default' %>
          </div>
        </div>
      </div>

    </div>
<% end %>
