<div class="nested-fields">

  <div class="clearfix">
    <%= link_to_remove_association t('Remove'), f %>
  </div>

  <div class="form-group">
    <%= f.label :name, {class: 'col-sm-3 control-label'} %>
    <div class="col-sm-9">
      <%= f.select :name, DName.options_for_select_name, {include_blank: ''}, {class: 'form-control select2-tags'} %>
      <%= f.error :name %>
    </div>
  </div>
  <%= f.input :price, input_html: {min: 0, step: 0.01, value: number_with_precision(f.object.price, precision: 2)} %>

  <hr/>
</div>